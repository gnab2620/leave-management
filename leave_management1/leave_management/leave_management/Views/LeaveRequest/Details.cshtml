@model leave_management.Models.LeaveRequestVM

@{
    ViewData["Title"] = "Details";
    
}

<h1>Reviews @Model.RequestingEmployee.FirstName @Model.RequestingEmployee.LastName's Leave Request</h1>
@if (Model.Approved == null)
{
    <div class="alert alert-warning" role="alert">
        <h4 class="alert-heading">Pending Approval</h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId)</strong>@Model.RequestingEmployee.FirstName @Model.RequestingEmployee.LastName
        </p>
        <br />
        <p>
            @Html.DisplayNameFor(model => model.DateRequest)-@Html.DisplayFor(model => model.DateRequest)
        </p>
    </div>
}
else if (Model.Approved == true)
{
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Approve By @Model.ApprovedBy.FirstName @Model.ApprovedBy.LastName</h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId)</strong>@Model.RequestingEmployee.FirstName @Model.RequestingEmployee.LastName
        </p>
        <br />
        <p>
            @Html.DisplayNameFor(model => model.DateRequest)-@Html.DisplayFor(model => model.DateRequest)
        </p>
    </div>
}
else
{
    <div class="alert alert-danger" role="alert">
        <h4 class="alert-heading">Reject By @Model.ApprovedBy.FirstName @Model.ApprovedBy.LastName</h4>
        <p>
            <strong>@Html.DisplayNameFor(model => model.RequestingEmployeeId)</strong>@Model.RequestingEmployee.FirstName @Model.RequestingEmployee.LastName
        </p>
        <br />
        <p>
            @Html.DisplayNameFor(model => model.DateRequest)-@Html.DisplayFor(model => model.DateRequest)
        </p>
    </div>
}
<div>
   
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RequestingEmployee)
        </dt>
        <dd class="col-sm-10">
            @Model.RequestingEmployee.FirstName @Model.RequestingEmployee.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LeaveType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LeaveType.Name)
        </dd>
    </dl>
</div>
<div>
    @if (Model.Approved == null)
    {
        <a class="btn btn-success" asp-action="ApproveRequest" asp-route-id="@Model.Id">
            <i class="fade fa-check"></i>
            Approve
        </a>
        <a class="btn btn-danger" asp-action="RejectRequest" asp-route-id="@Model.Id">
            <i class="fade fa-remove"></i>
            Reject
        </a>
    }
    <a class="btn-outline-secondary" asp-action="Index">Back to List</a>
</div>